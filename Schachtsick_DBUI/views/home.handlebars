<form action="http://52.10.125.87:3000/insert?">
	<fieldset>
		<legend>Add a Workout</legend>
		<label for="Name">Name: </label>
		<input type="text" name="name" id="name">
		<br>
		<label for="Reps">Reps: </label>
		<input type="text" name="reps" id="reps">
		<br>
		<label for="Weight">Weight: </label>
		<input type="text" name="weight" id="weight">
		<br>
		<label for="Measure">Measure: </label>
		<input type="radio" name="measure" id="lbs" value=1> lbs.   
		<input type="radio" name="measure" id="kgs" value=0> kgs.   
		<br>
		<label for="Date">Date (eg. yyyy-dd-mm): </label>
		<input type="text" name="date" id="date">
		<input type="submit" id="addSubmit">
	</fieldset>
</form>
<h2>My Workout Results</h2>
<p><b>NAME : REPS : WEIGHT : MEASURE : DATE</b></p>
{{#each dataList}}
    <p>{{this.name}}  :  {{this.reps}}  :  {{this.weight}}  :  {{this.measure}}  :  {{this.date}}<input type="button" name="id" onclick="http://52.10.125.87:3000/delete?" /></p>
  {{/each}}

